{
  "editor.cursorStyle": "block",
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code', 'Roboto Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.autoIndent": true,
  "editor.cursorBlinking": "blink",
  "editor.dragAndDrop": true,
  "explorer.confirmDragAndDrop": true,
  "editor.fontSize": 12,
  "editor.formatOnType": true,
  "editor.minimap.enabled": false,
  // "editor.smoothScrolling": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.rulers": [100],
  "editor.wordWrap": "on",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "node_modules/": true,
    "**/*.swp": true,
    "tags": true,
    ".idea/": true,
    ".vscode/": false
  },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "scss.validate": false,
  "terminal.integrated.cursorBlinking": false,
  "window.newWindowDimensions": "maximized",
  "window.openFoldersInNewWindow": "on",
  "window.restoreWindows": "all",
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "window.titleBarStyle": "custom",
  "workbench.editor.enablePreview": false,
  "workbench.editor.openPositioning": "last",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/dist": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "workbench.iconTheme": "vscode-icons",
  "window.zoomLevel": 0,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.panel.defaultLocation": "right",
  //////// VIM
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // {
    //   "before": ["<leader>", "m"],
    //   "commands": [
    //     "bookmarks.toggle"
    //   ]
    // },
    // {
    //   "before": ["<leader>", "b"],
    //   "commands": [
    //     "bookmarks.listFromAllFiles"
    //   ]
    // },
    {
      "before": ["<leader>", "b", "l"],
      "commands": [
        "open-buffers.openBuffer"
      ]
    }
  ],
  // "workbench.colorCustomizations": {
  //   "statusBar.background": "#8FBCBB",
  //   "statusBar.noFolderBackground": "#8FBCBB",
  //   "statusBar.debuggingBackground": "#8FBCBB"
  // },
  "editor.lineNumbers": "relative",
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.colorTheme": "Panda Syntax"
}
